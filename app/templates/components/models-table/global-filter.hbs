<div class="{{classes.globalFilterWrapper}} col-xs-12 table-filter">
  <div class="input-group">
    <span class="input-group-addon">
      <span class="fa fa-search"></span>
    </span>
    {{input
      type="text"
      value=filterString
      class=(concat classes.input " form-control")
      enter=""
      placeholder=messages.searchLabel
    }}
    {{#if globalFilterUsed}}
    <span class="input-group-btn">
      <button
        onclick={{action (mut filterString) ""}}
        class="btn btn-info btn-flat"
        type="button">
          <span class="fa fa-times"></span>
      </button>
    </span>
    {{/if}}
  </div>
</div>
